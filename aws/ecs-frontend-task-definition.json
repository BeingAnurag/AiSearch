{
  "family": "aisearch-frontend",
  "networkMode": "awsvpc", 
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::058264529499:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::058264529499:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "frontend",
      "image": "058264529499.dkr.ecr.us-east-1.amazonaws.com/aisearch/frontend:latest",
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "NEXT_PUBLIC_API_URL",
          "value": "https://api.yourdomain.com"
        },
        {
          "name": "NEXT_PUBLIC_WS_URL", 
          "value": "wss://api.yourdomain.com"
        },
        {
          "name": "NEXT_PUBLIC_APP_URL",
          "value": "https://yourdomain.com"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/aisearch-frontend",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:3000/api/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3
      }
    }
  ]
}