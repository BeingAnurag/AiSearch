{
  "name": "aisearch",
  "version": "1.0.0",
  "description": "AI-powered search application with intelligent agents",
  "private": true,
  "workspaces": [
    "backend",
    "frontend", 
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:backend": "pnpm --filter @aisearch/backend run dev",
    "dev:frontend": "pnpm --filter @aisearch/frontend run dev",
    "build": "pnpm run build:shared && pnpm run build:backend && pnpm run build:frontend",
    "build:shared": "pnpm --filter @aisearch/shared run build",
    "build:backend": "pnpm --filter @aisearch/backend run build",
    "build:frontend": "pnpm --filter @aisearch/frontend run build",
    "start": "concurrently \"pnpm run start:backend\" \"pnpm run start:frontend\"",
    "start:backend": "pnpm --filter @aisearch/backend run start",
    "start:frontend": "pnpm --filter @aisearch/frontend run start",
    "test": "pnpm run test:backend && pnpm run test:frontend",
    "test:backend": "pnpm --filter @aisearch/backend run test",
    "test:frontend": "pnpm --filter @aisearch/frontend run test",
    "lint": "pnpm run lint:backend && pnpm run lint:frontend",
    "lint:backend": "pnpm --filter @aisearch/backend run lint",
    "lint:frontend": "pnpm --filter @aisearch/frontend run lint",
    "clean": "pnpm --filter @aisearch/shared run clean && rm -rf backend/dist && rm -rf frontend/.next",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  },
  "keywords": [
    "ai",
    "search", 
    "nodejs",
    "nextjs",
    "typescript",
    "websocket",
    "monorepo"
  ],
  "author": "AiSearch Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrkeshav-05/AiSearch.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}